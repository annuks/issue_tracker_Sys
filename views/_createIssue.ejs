<link rel="stylesheet" href="/css/createIssue.css" />
<body>
  <div id="main-container">
  <div id="create-project">
    <button>Create Issue <i class="fa-solid fa-circle-plus"></i></button>
    </div>
  <div id="form-container">
<form action="/issues/create" method="post">
  <!-- Title input -->
  <div class="form-outline mb-2">
    <label class="form-label" for="title">Title</label><br>
    <input type="text" id="issue-title" class="form-control" name="issueTitle" />
    <input name="project" value="<%=project._id%>" hidden/>
  </div>

  <!-- Issue author input -->
  <div class="form-outline mb-2">
    <label class="form-label" for="form4Example2">Author</label><br>
    <input type="text" id="issue-author" class="form-control" name="author"/>
  </div>
  <!-- Issue labels input -->
  <!-- <div class="form-outline mb-4">
    <label class="form-label" for="issue-label">Label of Issue</label>
    <input type="text" id="labels" class="form-control" name="labels" />
  </div> -->

  <!-- Description input -->
  <div class="form-outline mb-2">
    <label class="form-label" for="description">Description</label>
    <textarea class="form-control" id="issue-description" rows="4" name="description"></textarea>
  </div>



  <!-- Submit button -->
  <button type="submit" class="btn btn-warning btn-block mb-2">Create</button>
</div>
</div>
</form>
</body>