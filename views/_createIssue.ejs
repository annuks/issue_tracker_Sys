<link rel="stylesheet" href="/css/createIssue.css" />
<body>
  <div id="form-container">
    <div id="add-project">
      <div id="form-header">
          <button id="close-button" onclick="closeForm()">X</button>
          <h2>Add Issue</h2><hr>
      </div>
      <form action="/issues/create" method="post">
        <!-- Issue Title input -->
        <div class="row">
          <div class="col-3">
            <label class="form-label" for="title">Title</label>
          </div>
          <div class="col-8">
            <input type="text" id="issue-title" class="form-control" name="issueTitle" />
            <input name="project" value="<%=project._id%>" hidden/>        
          </div>
        </div>

        <!-- Description input -->
        <div class="row">
          <div class="col-3">
            <label class="form-label" for="description">Description</label>
          </div>
          <div class="col-8">
            <textarea class="form-control" id="issue-description" rows="4" name="description"></textarea>
          </div>
        </div>


        <!-- <div class="row">
          <div class="col-3">
            <label class="form-label" for="description">Label</label>
          </div>
          <div class="col-8">
            <select class="form-select">
              <option value="1">Front-End</option>
              <option value="2">DBA</option>
              <option value="3">JS</option>
            </select> 
          </div>
        </div> -->

        <!-- Author input -->
        <div class="row">
          <div class="col-3">
            <label class="form-label" for="form4Example2">Author</label>
          </div>
          <div class="col-8">
            <input type="text" id="issue-author" class="form-control" name="author"/>
          </div>
        </div>




        <!-- Submit button -->
        <div class="row">
          <div class="col-3">
          </div>
          <div class="col-8">
            <button type="submit" class="btn btn-primary float-end">Create </button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <script>
    // js for closing form
    function closeForm(){
      document.getElementById("form-container").style.height = "0";
      document.getElementById("form-container").style.width = "0";
    }
  </script>
</body>
